# ── Server ──────────────────────────────────────────────────────────────────

NODE_ENV=production
PORT=4200

# ── Auth ─────────────────────────────────────────────────────────────────────
# AUTH_MODE: password | google | both

AUTH_MODE=password

# Required when AUTH_MODE is "password" or "both"
# Generate with: ./bin/setup.sh
DASHBOARD_PASSWORD_HASH=

# Must be at least 32 random characters
# Generate with: openssl rand -hex 32
SESSION_SECRET=

# ── Google OAuth (required when AUTH_MODE is "google" or "both") ─────────────

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_ALLOWED_DOMAIN=yourdomain.com
PUBLIC_URL=https://your-dashboard-domain.com

# ── Dokku SSH ────────────────────────────────────────────────────────────────

DOKKU_SSH_HOST=your-server-ip-or-hostname
DOKKU_SSH_PORT=22
DOKKU_SSH_USER=dokku

# Base64-encoded ed25519 private key with access to the Dokku server
# Generate with: base64 -w 0 ~/.ssh/id_ed25519
DOKKU_SSH_KEY=

# Dokku app name (used for self-restart detection)
DOKKU_APP_NAME=dokku-dashboard

# SSH command timeout in milliseconds (default: 30000)
# SSH_COMMAND_TIMEOUT_MS=30000

# ── Network ──────────────────────────────────────────────────────────────────

# Comma-separated IPs/CIDRs of trusted reverse proxies (for X-Forwarded-For)
# TRUSTED_PROXIES=127.0.0.1,10.0.0.0/8

# ── Features ─────────────────────────────────────────────────────────────────

# Enable SQL explorer (disabled by default)
# ENABLE_SQL_EXPLORER=false
